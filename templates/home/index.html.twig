{% extends 'base.html.twig' %}

{% block title %}ACCUEIL{% endblock %}

    {% block body %}
        <div class="container-title">
            <h1>{{ 'LISTE DES ARTICLES' | capitalize }}</h1>
        </div>
        <div class="product-list">
                {% for product in products %}
                    {% if product.published == 'true' %}
                    <div class="product-item">
                        <a href="{{ path('info',{id: product.id }) }}"><span class="label">{{ product.label | upper }}</span></a>
                        <p>{{ product.reference | capitalize }}</p>
                        <p>{{ product.price | capitalize }}</p>
                        <p>{{ product.stock | capitalize }}</p>
                        <a class="edit" href="{{ path('edit',{id: product.id }) }}">EDIT</a>
                    </div>
                    {% endif %}
                {% endfor %}
        </div>
    {% endblock %}
