{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/form.css') }}">
{% endblock %}

{% block title %}CREER{% endblock %}

{% block body %}
    <div class="container-title">
        <h1>{{ 'CREER UN PRODUIT' | capitalize}}</h1>

    </div>
    <div class="form-container">
        {{ form_start(form) }}
        <div class="form-row">
            {{ form_label(form.reference) }}
            {{ form_widget(form.reference) }}
        </div>
        <div class="error">{{ form_errors(form.reference) }}</div>
        <div class="form-row">
            {{ form_label(form.label) }}
            {{ form_widget(form.label) }}
        </div>
        <div class="error">{{ form_errors(form.label) }}</div>
        <div class="form-row">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
        </div>
        <div class="error">{{ form_errors(form.description) }}</div>
        <div class="form-row">
            {{ form_label(form.price) }}
            {{ form_widget(form.price) }}
        </div>
        <div class="error">{{ form_errors(form.price) }}</div>
        <div class="form-row">
            {{ form_label(form.stock) }}
            {{ form_widget(form.stock) }}
        </div>
        <div class="error">{{ form_errors(form.stock) }}</div>
        <div class="form-row">
            {{ form_label(form.published) }}
            {{ form_widget(form.published) }}
        </div>
        <div class="error">{{ form_errors(form.published) }}</div>
        <div class="form-row">
            {{ form_label(form.categorie) }}
            {{ form_widget(form.categorie) }}
        </div>
        <div class="error">{{ form_errors(form.categorie) }}</div>
{#        <div class="form-row">#}
{#            {{ form_label(form.sousCategorie) }}#}
{#            {{ form_widget(form.sousCategorie) }}#}
{#        </div>#}
{#        <div class="error">{{ form_errors(form.sousCategorie) }}</div>#}
        <div class="btn">
            <button class="edit" type="submit">AJOUTER</button>
        </div>
        {{ form_end(form, {'render_rest': false}) }}
    </div>
{% endblock %}



